<h3>Add a Quote</h3>
<fieldset>
  <form method="POST" action="/quotes">
    <div class="form-group col-md-4">
      <input name="quote[text]" class="form-control" placeholder="Text"/>
    </div>
    <div class="form-group col-md-4">
      <input name="quote[author]"  class="form-control" placeholder="Author"/>
    </div>
      <div class="form-group col-md-4">
        <input class="btn btn-primary col-md-12" type="submit" value="Submit">
      </div>
  </form>
</fieldset>