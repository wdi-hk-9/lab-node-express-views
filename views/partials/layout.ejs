<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Candy App</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="css/style.css" /></head>
<body>
  <div class="container">
    <% include quotes/head %>
    <% include quotes/header %>
    <% include quotes/new %>

    <% quotes.forEach(function(quote) {  %>
      <ul id="quotes">
        <blockquote>
          <p> <%- link_to(quote.text, '/quotes/'+ quote._id) %> </p>
          <footer>
            <%= quote.author %>
          </footer>

          <form method="POST" action="/quotes/<%= quote._id %>?_method=DELETE%>">
            <button type="submit" class="btn btn-default">Delete</button>
          </form>
        </blockquote>
      </ul>


    <% }) %>
  </div>

  <div class="container">
    <% include quotes/footer %>
  </div>
</body>

</html>
